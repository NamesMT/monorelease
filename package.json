{
  "name": "monorelease",
  "type": "module",
  "version": "0.5.1",
  "packageManager": "pnpm@10.13.1",
  "description": "Release monorepo (sub)projects with ease",
  "author": "NamesMT <dangquoctrung123@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/namesmt/monorelease#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namesmt/monorelease.git"
  },
  "bugs": "https://github.com/namesmt/monorelease/issues",
  "sideEffects": false,
  "imports": {
    "#src/*": "./src/*"
  },
  "bin": {
    "monorelease": "./dist/cli-entry.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "vitest",
    "test:types": "tsc --noEmit",
    "quickcheck": "pnpm run lint && pnpm run test:types",
    "check": "pnpm run lint && pnpm run test:types && vitest run --coverage",
    "stub": "obuild --stub",
    "build": "obuild",
    "prerelease": "pnpm run quickcheck",
    "release": "pnpm dlx changelogen@latest --release --push --publish",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "changelogen": "^0.6.2",
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "open": "^10.2.0",
    "pathe": "^2.0.3",
    "pkg-types": "^2.2.0",
    "semver": "^7.7.2",
    "std-env": "^3.9.0",
    "workspace-resolver": "^0.0.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@namesmt/utils": "^0.5.16",
    "@types/node": "^22.16.5",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "lint-staged": "^16.1.2",
    "obuild": "^0.2.1",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "is-core-module": "npm:@nolyfill/is-core-module@^1.0.39"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}

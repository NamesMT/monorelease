{
  "name": "changelogen-monorepo",
  "type": "module",
  "version": "0.2.1",
  "packageManager": "pnpm@10.6.1",
  "description": "Generate Beautiful Changelogs Monorepo using Conventional Commits",
  "license": "MIT",
  "repository": "hywax/changelogen-monorepo",
  "sideEffects": false,
  "bin": {
    "changelogen-monorepo": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "release": "pnpm changelogen --release --push && pnpm publish",
    "build": "unbuild",
    "prepack": "unbuild",
    "changelogen-monorepo": "jiti ./src/cli.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/node": "^22.15.3",
    "changelogen": "^0.6.1",
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "open": "^10.1.1",
    "pathe": "^2.0.3",
    "pkg-types": "^2.1.0",
    "std-env": "^3.9.0",
    "unbuild": "^3.5.0",
    "workspace-resolver": "^0.0.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.25.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "changelogen-monorepo": [
    "@hywax/changelogen-monorepo"
  ]
}
